{
  "exp": {
    "name": "conv_mnist_from_config"
  },
  "data_loader": {
    "name": "conv_mnist_data_loader.ConvMnistDataLoader"
  },
  "data_shape": {
    "len_y": 28,
    "len_x": 28,
    "channels": 1,
    "classes": 10
  },
  "model":{
    "name": "conv_mnist_model.ConvMnistModel",
    "learning_rate": 0.001,
    "loss": "hyperparamters.loss",
    "optimizer": "adam",
    "accuracy": "hyperparamters.accuracy",
    "activation": "relu"
  },
  "trainer":{
    "name": "simple_mnist_trainer.SimpleMnistModelTrainer",
    "num_epochs": 20,
    "batch_size": 64,
    "validation_split":0.25,
    "verbose_training": true
  },
  "callbacks":{
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": true,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true
  }
}
